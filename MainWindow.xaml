<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="Notizzettel" Height="358" Width="537"
        Closed="Window_Closed" Loaded="Window_Loaded">
    <Grid>
        <Label x:Name="lblNotiz" Content="Notizen" HorizontalAlignment="Left" Margin="24,20,0,0" VerticalAlignment="Top"/>
        <ListBox x:Name="lbxNotizen" HorizontalAlignment="Left" Height="176" Margin="24,51,0,0" VerticalAlignment="Top" Width="382"/>
        <Button x:Name="btnLöschen" Content="löschen" HorizontalAlignment="Left" Margin="423,205,0,0" VerticalAlignment="Top" Width="75" 
                Click="btnLöschen_Click"/>
        <Label x:Name="lblNeueNotiz" Content="neue Notiz" HorizontalAlignment="Left" Margin="24,250,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="tbxNeueNotiz" HorizontalAlignment="Left" Height="22" Margin="24,281,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="382"/>
        <Button x:Name="btnSpeichern" Content="speichern" HorizontalAlignment="Left" Margin="423,281,0,0" VerticalAlignment="Top" Width="75" 
                Click="btnSpeichern_Click"/>
    </Grid>
</Window>
